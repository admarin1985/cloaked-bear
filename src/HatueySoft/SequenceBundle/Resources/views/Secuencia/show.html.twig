{% extends "HatueySoftSecurityBundle::layout.html.twig" %}


{% block titulo_encabezado %}
    Datos de la Secuencia: {{ entity.nombre }}
{% endblock %}

{% block content -%}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipo }}</td>
            </tr>
            <tr>
                <th>Prefijo</th>
                <td>
                    {% if entity.prefijo == null %}
                        -
                    {% else %}
                        {{ entity.prefijo }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Sufijo</th>
                <td>
                    {% if entity.sufijo == null %}
                        -
                    {% else %}
                        {{ entity.sufijo }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Siguiente Valor</th>
                <td>
                    {% if entity.siguienteValor == null %}
                        -
                    {% else %}
                        {{ entity.siguienteValor }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Cantidad a Incrementar</th>
                <td>
                    {% if entity.cantidadIncrementar == null %}
                        -
                    {% else %}
                        {{ entity.cantidadIncrementar }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Cantidad Relleno</th>
                <td>
                    {% if entity.cantidadRelleno == null %}
                        -
                    {% else %}
                        {{ entity.cantidadRelleno }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Relleno</th>
                <td>
                    {% if entity.relleno == null %}
                        -
                    {% else %}
                        {{ entity.relleno }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Código</th>
                <td>
                    {% if entity.codigo == null %}
                        -
                    {% else %}
                        {{ entity.codigo }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>
                    {% if entity.activo == 1 %}
                        Sí
                    {% else %}
                        No
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('secuencia_edit', { 'id': entity.id }) }}"> Editar</a>
        <a class="btn btn-primary" href="{{ path('secuencia') }}"> Listado</a>
        <a href="#delete" data-href="{{ path('secuencia_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaBodegaBundle') }}</a>
    </div>

    {% include 'HatueySoftSequenceBundle:Secuencia:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var deleteevent = new DeleteEvent('{{ path('secuencia') }}', 'div#records_list', false);
        deleteevent.start_events();
    </script>
{% endblock %}
