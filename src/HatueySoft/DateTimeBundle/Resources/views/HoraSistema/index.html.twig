{% extends "BusetaBusesBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Cambio de Hora del Sistema' %}

{% block area_trabajo %}

<form action="{{ path('hatueysoft_datetime_horasistema_update') }}" method="post" enctype="multipart/form-data">
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-2">
            {{ form_row(form.hora) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.activo) }}
        </div>
    </div>

    <br/>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="Salvar" />
        </div>
    </div>

</form>

{% endblock area_trabajo %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function(){
            var horaSistema = $('#hatueysoft_datetime_horasistema_type_hora').datetimepicker({
                'format': 'H:m',
                'formatSubmit': 'H:m'
            });

            var horaSistema = $('#hatueysoft_datetime_horasistema_type_hora').val();
            $('input:hidden[name^="hatueysoft_datetime_horasistema_type[hora]_submit"]').val(horaSistema);
        });
    </script>
{% endblock %}
