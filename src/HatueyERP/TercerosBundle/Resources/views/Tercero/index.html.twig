{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block titulo %}
    Listado de terceros
{% endblock %}

{% block titulo_encabezado %}
    Listados de terceros
{% endblock %}

{% block area_trabajo %}

    {% set display = '' %}
    {% set headericon = 'glyphicon-chevron-down' %}
    {% if (filter_form.vars.value.identificador is null or filter_form.vars.value.identificador is empty)
        and (filter_form.vars.value.nombres is null or filter_form.vars.value.nombres is empty)
        and (filter_form.vars.value.apellidos is null or filter_form.vars.value.nombres is empty) %}
        {% set display = 'display: none;' %}
        {% set headericon = 'glyphicon-chevron-right' %}
    {% endif %}

    <h4><a id="filter_form_header" style="cursor: pointer; "><span class="glyphicon {{ headericon }}"></span> Búsqueda</a></h4>
    <div id="filter_form_component" style="{{ display }}">
        <form id="filter_form" method="{{ filter_form.vars.method }}" action="{{ filter_form.vars.action }}">
            <div class="row">
                <div class="col-lg-4">{{ form_row(filter_form.identificador) }}</div>
                <div class="col-lg-4">{{ form_row(filter_form.nombres) }}</div>
                <div class="col-lg-4">{{ form_row(filter_form.apellidos) }}</div>
            </div>
            {{ form_widget(filter_form._token) }}
            <div class="filter-actions" style="margin-top: 8px;">
                <a id="filter_form_submit_btn" class="btn btn-success btn-small"><span class="glyphicon glyphicon-filter"></span> Filtrar</a>
                <a id="filter_form_reset_btn" class="btn btn-danger btn-small"><span class="glyphicon glyphicon-repeat"></span> Reiniciar</a>
            </div>
        </form>
    </div>

    <hr/>
    <div class="btn-group" style="margin-bottom: 8px;">
        <a class="btn btn-primary" href="{{ path('terceros_tercero_new') }}">
            <span class="glyphicon glyphicon-plus-sign"></span> {{ 'tercero.btn.adicionar'|trans({}, 'HatueyERPTercerosBundle') }}</a>
    </div>

    <table class="records_list table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(entities, 'Identificador', 't.identificador') }}</th>
                <th>{{ knp_pagination_sortable(entities, 'Nombre', 't.nombres') }}</th>
                <th>{{ knp_pagination_sortable(entities, 'Apellidos', 't.apellidos') }}</th>
                <th>Nombre Comercial</th>
                <th>Nombre Fiscal</th>
                <th>Descripción</th>
                <th>CIF/NIF</th>
                <th>Persona</th>
                <th style="text-align: center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.identificador }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.nombrecomercial }}</td>
                <td>{{ entity.nombrefiscal }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.cifnif }}</td>
                <td>
                    {% if entity.ispersona %}
                        <span class="glyphicon glyphicon-ok"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove"></span>
                    {% endif %}
                </td>
                <td  style="width: 18% !important; text-align: center;">
                    <div class="btn-group">
                        <a class="btn btn-success btn-xs" href="{{ path('terceros_tercero_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"> Mostrar</span></a>
                    </div>

                    <div class="btn-group">
                        <a class="btn btn-danger btn-xs" href="{{ path('terceros_tercero_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"> Editar</span></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">{{ 'messages.no_results' | trans({}, 'HatueyERPTercerosBundle') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="paginator row">
        <div class="col-lg-4"><strong>Resultados:</strong> {{ entities.getTotalItemCount }}</div>
        <div class="col-lg-4">{{ knp_pagination_render(entities) }}</div>
    </div>

{% endblock area_trabajo %}


{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('a#filter_form_header').click(function(){
                if ($('a#filter_form_header span').hasClass('glyphicon-chevron-right')) {
                    $('a#filter_form_header span')
                            .removeClass('glyphicon-chevron-right')
                            .addClass('glyphicon-chevron-down');
                } else {
                    $('a#filter_form_header span')
                            .removeClass('glyphicon-chevron-down')
                            .addClass('glyphicon-chevron-right');
                }

                $('div#filter_form_component').slideToggle(500);
            });

            $('a#filter_form_submit_btn').click(function(){
                $('form#filter_form').submit();
            });

            $('a#filter_form_reset_btn').click(function(){
                $('form#filter_form').find('input').each(function(){
                    $(this).val(null);
                });
                $('form#filter_form').find('select').each(function(){
                    $(this).val(null);
                })
            });
        });
    </script>
{% endblock javascripts %}