{% form_theme form '@HatueyERPTerceros/Form/fields.twig' %}

<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST" enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form.id) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form.activo) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            {{ form_row(form.foto) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            {{ form_row(form.identificador) }}
        </div>

        <div class="col-lg-4">
            {{ form_row(form.nombres) }}
        </div>

        <div class="col-lg-4">
            {{ form_row(form.apellidos) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            {{ form_row(form.nombreComercial) }}
        </div>

        <div class="col-lg-4">
            {{ form_row(form.nombreFiscal) }}
        </div>

        <div class="col-lg-4">
            {{ form_row(form.cifNif) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            {{ form_row(form.nombreComercial) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.nombreFiscal) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form.descripcion) }}
        </div>
    </div>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" id="btn_tercero_save" href="#"><span class="glyphicon glyphicon-save"></span>
                {{ 'actions.save' | trans({}, 'HatueyERPTercerosBundle') }}</a>
            <a class="btn btn-default" id="btn_tercero_cancel" href="{{ path('terceros_tercero') }}"><span class="glyphicon glyphicon-chevron-left"></span>
                {{ 'actions.cancel' | trans({}, 'HatueyERPTercerosBundle') }}</a>
        </div>
    </div>
</form>
