<div class="modal fade" id="form_address_modal" tabindex="-1" role="dialog" aria-labelledby="createAddress" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="createAddress">{{ 'direccion.modal.title'|trans({},'HatueyERPTercerosBundle') }}</h4>
            </div>
            <div class="modal-body">
                <form name="{{ form.vars.full_name }}" id="{{ form.vars.id }}" action="{{ form.vars.action }}"
                      method="post" enctype="multipart/form-data">
                    {% if form.vars.method == 'PUT' %}
                        <input type="hidden" name="_method" value="PUT"/>
                    {% endif %}
                    {{ form_widget(form) }}
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" id="btn_direccion_cancel" data-dismiss="modal"><span class="glyphicon glyphicon-chevron-left"></span>
                    {{ 'actions.cancel' | trans({}, 'HatueyERPTercerosBundle') }}</a>
                <a href="#" class="btn btn-primary" id="btn_direccion_save"><span class="glyphicon glyphicon-save"></span>
                    {{ 'actions.save' | trans({}, 'HatueyERPTercerosBundle') }}</a>
            </div>
        </div>
    </div>
</div>