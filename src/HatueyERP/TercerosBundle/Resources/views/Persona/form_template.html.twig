{% form_theme form '@HatueyERPTerceros/Form/fields.twig' %}

<form action="{{ form.vars.action }}" method="POST" enctype="multipart/form-data" name="{{ form.vars.full_name }}" id="{{ form.vars.id }}">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form.id) }}
    {{ form_row(form.tercero) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form.isPersona) }}
        </div>
    </div>

    {#<div class="row">#}
        {#<div class="col-lg-2 form-group">#}
            {#<div class="panel panel-default">#}
                {#<a href="#" class="thumbnail">#}
                    {#{% if entity is not defined#}
                    {#or entity.persona is not defined#}
                    {#or entity.persona.foto is not defined#}
                    {#or entity.persona.foto is null %}#}
                        {#<img src="{{ asset('bundles/olimpiadatemplate/images/default.png') }}" alt="" width="152" height="120"/>#}
                    {#{% else %}#}
                        {#<img src="{{ asset('uploads/resources/') }}{{ entity.persona.foto.path }}" alt="" width="152" height="120"/>#}
                    {#{% endif %}#}
                {#</a>#}
            {#</div>#}
        {#</div>#}
        {#<div class="col-lg-3 form-group">#}
            {#{{ form_row(form.foto) }}#}
        {#</div>#}
    {#</div>#}
    <fieldset>
        <legend>Datos Personales</legend>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.cedula) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.fechaNacimiento) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.edad) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.email) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.sexo) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.nacionalidad) }}
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Datos generales</legend>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.nombreMadre) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.cedulaMadre) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.nombrePadre) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.cedulaPadre) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.trabaja) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.profesion) }}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.idioma1) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.idioma2) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.pasatiemposHabilidades) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.estadoCivil) }}
            </div>
        </div>
    </fieldset>


    <fieldset>
        <legend>Otros datos</legend>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.tallaCamiseta) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.tallaPantalon) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.tallaShort) }}
            </div>
        </div>
    </fieldset>


    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" id="btn_persona_save" href="#"><span class="glyphicon glyphicon-save"></span>
                {{ 'actions.save' | trans({}, 'HatueyERPTercerosBundle') }}</a>
            <a class="btn btn-default" id="btn_persona_cancel" href="{{ path('terceros_tercero') }}"><span class="glyphicon glyphicon-chevron-left"></span>
                {{ 'actions.cancel' | trans({}, 'HatueyERPTercerosBundle') }}</a>
        </div>
    </div>
</form>