{% extends "BusetaTemplateBundle::layout.html.twig" %}

{% block title %}Página principal v0.6{% endblock %}

{% block header %} {% endblock %}

 {% block titulo_encabezado %} Página Principal {% endblock %}


{% block body %}

    <header id="hero" style="padding-bottom: 20px; margin-top:20px;">

        <div class="jumbotron masthead">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="inner span5">
                        <h1>Sistema de Gestión de Buses</h1>
                        <p>Seleccione el módulo deseado</p>
                    </div>
                    <div class="span7">
                    </div>
                </div>
            </div>
        </div>

    </header>


    <div id="home-tiles" class="container-fluid metro">
        <div class="row-fluid">
            <div class="span4">
                <a class="tile wide imagetext bg-color-blue middle" href="{{ path('autobus_principal') }}">
                    <div class="image-wrapper">
                        <span class="icon icon-bus"/>
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Vehículos</div>
                    </div>
                </a>
            </div>

            <div class="span4">
                <a class="tile wide imagetext bg-color-orange first" href="{{ path('bodega_principal') }}">
                    <div class="image-wrapper">
                        <span class="icon icon-home-2"/>
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Bodega</div>
                    </div>
                </a>
            </div>

            <div class="span4">
                <a class="tile wide imagetext bg-color-green last" href="{{ path('taller_principal') }}">
                    <div class="image-wrapper">
                        <span class="icon icon-wrench" />
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Taller</div>
                    </div>
                </a>
            </div>

        </div>
    </div>

    <div id="home-tiles" class="container-fluid metro" style="margin-top: 30px">
        <div class="row-fluid">
            <div class="span4">
                <a class="tile wide imagetext bg-color-blueDark middle" href="{{ path('configuracion_combustible') }}">
                    <div class="image-wrapper">
                        <i class="fa fa-dashboard" style="padding-left: 8px; font-size: 80px; height: 80px; line-height: 80px; width: 80px;"></i>
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Combustible</div>
                    </div>
                </a>
            </div>
            <div class="span4">
                <a class="tile wide imagetext bg-color-brown middle" href="{{ path('admin') }}">
                    <div class="image-wrapper">
                        <span class="icon icon-cog-2"/>
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Módulo Nomenclador</div>
                    </div>
                </a>
            </div>
            <div class="span4">
                <a class="tile wide imagetext bg-color-red middle" href="{{ path('security_usuario') }}">
                    <div class="image-wrapper">
                        <i class="fa fa-shield" style="padding-left: 8px; font-size: 80px; height: 80px; line-height: 80px; width: 80px;"></i>
                    </div>
                    <div class="column-text">
                        <div class="text-header3">Módulo Seguridad</div>
                    </div>
                </a>
            </div>
        </div>
    </div>

{% endblock %}


