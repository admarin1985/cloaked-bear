{% extends '::base.html.twig' %}

{% block title block('header') %}

{% block header 'Listado de Tareas Adicionales ' %}

{% block body -%}
    <h1>TareaAdicional list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarea</th>
                <th>Fecha_estimada</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tareaadicional_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tarea }}</td>
                <td>{% if entity.fechaestimada %}{{ entity.fechaestimada|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tareaadicional_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tareaadicional_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tareaadicional_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
