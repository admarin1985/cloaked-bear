{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crear Nueva Condición de Pago' %}

{% block area_trabajo %}

    {{ form_start(form) }}
        <div class="row show-grid">
            <div class="col-md-4">
                <label>Nombre:</label>
                {{ form_widget(form.nombre) }}
            </div>

            <div class="col-md-4">
                <label>Días de Plazo:</label>
                {{ form_widget(form.dias_plazo) }}
            </div>

            <div class="col-md-4">
                <label>Meses de Plazo:</label>
                {{ form_widget(form.meses_plazo) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-12">
                <label>Descripción:</label>
                {{ form_widget(form.descripcion) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-12">
                <label>Nota:</label>
                {{ form_widget(form.nota) }}
            </div>
        </div>


        <div class="row show-grid">
            <div class="col-md-4">

                <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">
                <div class="btn-group">
                    <a class="btn btn-primary" href="{{ path('condicionespago') }}"> Cancelar</a>
                </div>
            </div>
        </div>

    {{ form_end(form) }}


{% endblock %}


{% block contenido %}

{% endblock %}
