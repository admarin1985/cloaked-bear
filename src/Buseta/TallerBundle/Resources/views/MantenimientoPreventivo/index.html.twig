{% extends "BusetaTallerBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Listado de mantenimientos preventivos
{% endblock %}

{% block area_trabajo %}

    <div class="btn-group" style="padding-bottom: 8px;">
        <a class="btn btn-primary" href="{{ path('mantenimientopreventivo_new') }}"><i class="fa fa-plus-circle"></i> Adicionar mantenimiento preventivo</a>
    </div>

    <table class="records_list table table-striped table-bordered table-condensed table-hover">

        <thead>
        <tr>
            <th>Tarea</th>
            <th>Grupo</th>
            <th>Subgrupo</th>
            <th>Autobus</th>
            <th>Kilometraje</th>
            <th>Fecha Inicio</th>
            <th>Fecha Final</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.tarea }}</td>
                <td>{{ entity.autobus }}</td>
                <td>{{ entity.grupo }}</td>
                <td>{{ entity.subgrupo }}</td>
                <td>{{ entity.kilometraje }}</td>
                <td>{%  if entity.fechaInicio %}{{ entity.fechaInicio | date('d/m/Y') }}{% endif %}</td>
                <td>{%  if entity.fechaFinal %}{{ entity.fechaFinal | date('d/m/Y') }}{% endif %}</td>
                <td  style="width: 18% !important; text-align: center;">
                    <div class="btn-group">
                        <a class="btn btn-success btn-xs" href="{{ path('mantenimientopreventivo_show', { 'id': entity.id }) }}"><i class="fa fa-search"> Mostrar</i></a>
                    </div>

                    <div class="btn-group">
                        <a class="btn btn-danger btn-xs" href="{{ path('mantenimientopreventivo_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"> Editar</i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">No se encontraron registros de mantenimientos preventivos en el sistema.</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ knp_pagination_render(entities) }}
            </div>
        </div>
    </div>

{% endblock %}
