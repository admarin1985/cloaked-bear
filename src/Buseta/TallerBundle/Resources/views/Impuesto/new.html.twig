{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crar Nuevo Impuesto' %}

{% block area_trabajo %}

    <form action="{{ path('impuesto_create') }}" method="post" {{ form_enctype(form) }}>

        {{ form_errors(form) }}

        <div class="row show-grid">
            <div class="col-md-4">
                {{ form_row(form.nombre) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.numero) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.tipo) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                {{ form_row(form.tarifa) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">

                <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">
                <div class="btn-group">
                    <a class="btn btn-primary" href="{{ path('impuesto') }}"> Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendors/bootstrap/js/bootstrap-modal.js') }}"></script>
{% endblock javascripts %}
