{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendors/funciones_datetime_new.js') }}"></script>

    <script type="text/javascript">

        $(function(){
            $('#error').fadeOut(10);
            $('#valido').fadeOut(10);
            $('#tab_lineas').fadeOut(10);
            $('#guardarLineas').hide();

            $('#tab_basicos').click(function(){
                $('#tab_lineas').fadeOut(10);
                $('#guardarAlbaran').show();
                $('#guardarLineas').hide();

                $('#error').hide();
                $('#valido').hide();
            });

            $('#guardarAlbaran').click(function(){
                $('#error').fadeOut(10);
                $('#tab_lineas').fadeOut(10);

                var data = {
                    numeroReferencia:   $('#{{ form.numeroReferencia.vars.id }}').val(),
                    consecutivoCompra:  $('#{{ form.consecutivoCompra.vars.id }}').val(),
                    almacen:            $('#{{ form.almacen.vars.id }}').val(),
                    tercero:            $('#{{ form.tercero.vars.id }}').val(),
                    fechaMovimiento:    $('#{{ form.fechaMovimiento.vars.id }}').val(),
                    fechaContable:      $('#{{ form.fechaContable.vars.id }}').val(),
                    estadoDocumento:    $('#{{ form.estadoDocumento.vars.id }}').val()
                };

                $.ajax({
                    type: 'GET',
                    url: '{{ path("guardarAlbaran") }}',
                    data: data,
                    success: function(data) {
                        var values = $.parseJSON(data);

                        console.log(values.error);

                        if(values.error == 'error')
                        {
                            //Si existe al menos un campo no correcto en PedidoCompra se lanza un mensaje de error
                            $('#error').fadeIn(100);
                            $('#error').fadeOut(20000);

                            jQuery('body,html').animate({
                                scrollTop: 0
                            }, 25);
                        }
                        else
                        {
                            $('#guardarLineas').show();
                            $('#error').hide();
                            $('#guardarAlbaran').hide();
                            $('#valido').fadeIn(100);
                            $('#valido').fadeOut(20000);

                            //Si todos los campos del Albaran son correctos activo el tab de Lineas
                            $('#basicos').attr('class', 'tab-pane fade');
                            $('#tab_basicos').parent().removeAttr('class');

                            $('#tab_lineas').fadeIn(200);
                            $('#tab_lineas').parent().attr('class', 'active');

                            $('#lineas').attr('class', 'tab-pane fade in active');

                            jQuery('body,html').animate({
                                scrollTop: 0
                            }, 25);

                        }

                    }
                });
            });
        });

        var collectionHolder = $('div#bodega_albaran_type_albaranLinea');
        var $addTagLink = $('a.add_tag_link');

        jQuery(document).ready(function() {
            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            collectionHolder.data('index', collectionHolder.find('a.delete_tag_link').length);

            updateDeleteLink();
            updateView();

            function addTagForm(collectionHolder) {
                // Get the data-prototype explained earlier
                var prototype = collectionHolder.data('prototype');

                // get the new index
                var index = collectionHolder.data('index');

                // Replace '__name__' in the prototype's HTML to
                // instead be a number based on how many items we have
                var newForm = prototype.replace(/__name__/g, index);

                // increase the index with one for the next item
                collectionHolder.data('index', index + 1);

                // Display the form in the page in an li, before the "Add a tag" link li
                var $newFormDiv = $('<tr></tr>').append(newForm);
                collectionHolder.find('#tbody').append($newFormDiv);
                updateDeleteLink();
                updateView();
            }

            function updateDeleteLink(){
                $('a.delete_tag_link').on('click', function(e) {
                    // prevent the link from creating a "#" on the URL
                    e.preventDefault();

                    // remove the li for the tag form
                    $(this).parent().parent().remove();

                    updateView();
                });
            }

            function updateView(){
                counter = collectionHolder.find('a.delete_tag_link').length;
                if(counter == 0){
                    $('div#no-elements-tr').show();
                }else{
                    $('div#no-elements-tr').hide();
                }
            }

            $addTagLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                var modal = $('#newLinea');

                // captura de valores del modal
                var linea_linea = modal.find('#buseta_bodegabundle_albaran_linea_linea');
                var linea_producto = modal.find('#buseta_bodegabundle_albaran_linea_producto');
                var linea_cantidadMovida = modal.find('#buseta_bodegabundle_albaran_linea_cantidadMovida');
                var linea_almacen = modal.find('#buseta_bodegabundle_albaran_linea_almacen');
                var linea_uom = modal.find('#buseta_bodegabundle_albaran_linea_uom');
                var linea_valorAtributos = modal.find('#buseta_bodegabundle_albaran_linea_valorAtributos');

                var dataA = {
                    linea : $('#{{ albaran_linea.linea.vars.id }}').val()
                };

                $.when(
                        $.ajax({
                            type: 'GET',
                            url: '{{ path("albaran_ajax") }}',
                            data: dataA
                        })

                ).done(function(data, textStatus, jqXHR){

                            var valorA = $.parseJSON(data);

                            var index = collectionHolder.data('index');

                            addTagForm(collectionHolder);

                            $('#bodega_albaran_type_albaranLinea_' + index + '_linea').val(linea_linea.val());
                            $('#bodega_albaran_type_albaranLinea_' + index + '_producto ').val(linea_producto.val());
                            $('#bodega_albaran_type_albaranLinea_' + index + '_cantidadMovida').val(linea_cantidadMovida.val());
                            $('#bodega_albaran_type_albaranLinea_' + index + '_almacen').val(linea_almacen.val());
                            $('#bodega_albaran_type_albaranLinea_' + index + '_uom').val(linea_uom.val());
                            $('#bodega_albaran_type_albaranLinea_' + index + '_valorAtributos').val(linea_valorAtributos.val());
                        })

            });


        });

    </script>

{% endblock javascripts %}