{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo %}
    Listado de albaranes
{% endblock %}

{% block titulo_encabezado %}
    Listado de albaranes
{% endblock %}

{% block area_trabajo %}

    <h4><a id="busqueda_albaran" style="cursor: pointer; "><i class="icon-chevron-down"></i> Búsqueda de Albaranes</a></h4>
    <div id="busqueda_albaran_div" class="panel panel-default" style="display: none;">
        <div class="panel-body">
            <fieldset>
                <legend><h4>Búsqueda Avanzada</h4></legend>

                {{ form_start(albaran) }}
                <div class="row show-grid" style="padding-top: 0px">
                    <div class="col-md-4">
                        {{ form_row(albaran.numeroReferencia) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(albaran.consecutivoCompra) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(albaran.almacen) }}
                    </div>
                </div>

                <div class="row show-grid" style="padding-top: 0px">
                    <div class="col-md-4">
                        {{ form_row(albaran.tercero) }}
                    </div>
                </div>

                {{ form_end(albaran) }}

                <div class="row show-grid">
                    <div class="col-md-6">
                        <input class="btn btn-primary btn-bg" style="width: 100px;" value="Buscar" name="buscar" onclick="setFilters()">

                        <div class="btn-group">
                            <a class="btn btn-success btn-bg" href="{{ path('albaran') }}"><i class="fa fa-search"> Reiniciar Búsqueda</i></a>
                        </div>
                    </div>
                </div>


            </fieldset>
        </div>
    </div>

    <div class="btn-group" style="padding-bottom: 8px;">
        <a class="btn btn-primary" href="{{ path('albaran_new') }}"><i class="fa fa-plus-circle"></i> Adicionar Albaran</a>
    </div>
    <div class="albarans-result-table" style="text-align: center;"> </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{asset('vendors/busquedaAlbaran.js')}}" type="text/javascript"></script>

{% endblock %}
