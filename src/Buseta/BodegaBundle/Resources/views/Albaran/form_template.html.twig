<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST" enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form.id) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.numeroReferencia) }}
        </div>

        <div class="col-md-4">
            {{ form_row(form.numeroDocumento) }}
        </div>

        <div class="col-md-4">
            {{ form_row(form.tercero) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.almacen) }}
        </div>

        <div class="col-md-4">
            {{ form_row(form.fechaMovimiento) }}
        </div>

        <div class="col-md-4">
            {{ form_row(form.fechaContable) }}
        </div>
    </div>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            {% if entity.estadodocumento == 'PR' %}
                <a class="btn btn-primary" href="{{ path('completarAlbaran', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-refresh"></span> Completar Proceso</a>
            {% elseif entity.estadodocumento == 'BO' %}
                <a class="btn btn-primary" href="{{ path('procesarAlbaran', { 'id': entity.id }) }}"> <span class="glyphicon glyphicon-refresh"></span> Procesar</a>
            {% endif %}
            <a class="btn btn-primary" id="btn_albaran_save" href="#"><span class="glyphicon glyphicon-save"></span>
                {{ 'actions.save' | trans({}, 'BusetaBodegaBundle') }}</a>
            <a class="btn btn-default" id="btn_albaran_cancel" href="{{ path('albaran') }}"><span class="glyphicon glyphicon-chevron-left"></span>
                {{ 'actions.cancel' | trans({}, 'BusetaBodegaBundle') }}</a>
        </div>
    </div>
</form>
