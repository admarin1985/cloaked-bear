            <div class="col-lg-12">
                <h3 class="page-header">
                    {% block titulo_encabezado %}
                        Título encabezado
                    {% endblock %}
                </h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        {# Session flashes #}
        {% block flashes %}
            {% if app.session.flashbag.peekAll|length > 0 %}
                <div class="row">
                    <div class="col-sm-12 global-messages">
                        {{ session_flash() }}
                    </div>
                </div>
            {% endif %}
        {% endblock flashes %}

        {% block area_trabajo %}
            Área de Trabajo
        {% endblock %}
    </div>
{% endblock %}

