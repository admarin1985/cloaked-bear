{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo %}
    Informe de Stock
{% endblock %}

{% block titulo_encabezado %}
    Informe de Stock
{% endblock %}

{% block area_trabajo %}

    {% for almacen in almacenes %}
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <h4>Almacén "{{ almacen.nombre }}"</h4>

                            <table class="records_list table table-striped table-bordered table-condensed table-hover">
                                <thead>
                                <tr>
                                    <th  style="text-align: left;">Producto</th>
                                    <th>Cantidad de productos</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% set comprobar = '' %}

                                {% for entity in entities %}

                                    {% if entity.almacen == almacen %}
                                        <tr>
                                            <td>{{ entity.producto }}</td>
                                            <td  style="text-align: center;">{{ entity.cantidadProductos }}</td>
                                        </tr>

                                        {% set comprobar = 'ok' %}

                                    {% endif %}

                                {% endfor %}

                                {% if comprobar != 'ok' %}
                                    <tr>
                                        <td colspan="12">No se encontraron registros de productos para este almacén.</td>
                                    </tr>
                                {% endif %}

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>



    {% endfor %}


