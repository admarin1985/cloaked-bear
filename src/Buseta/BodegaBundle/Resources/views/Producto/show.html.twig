{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Datos del producto: "{{ entity.nombre }}"
{% endblock %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>

        <tr>
            <th>Código</th>
            <td>
                {% if entity.codigo == '' %}
                    <label style="color: red">El producto no tiene código</label>
                {% else %}
                    {{ entity.codigo }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Unidad de medida</th>
            <td>
                {% if entity.unidadmedida == '' %}
                    <label style="color: red">El producto no tiene unidad de medida</label>
                {% else %}
                    {{ entity.unidadmedida }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Costo</th>
            <td>
                {% if entity.costo == '' %}
                    <label style="color: red">El producto no tiene costo</label>
                {% else %}
                    {{ entity.costo }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Precio de salida</th>
            <td>
                {% if entity.preciosalida == '' %}
                    <label style="color: red">El producto no tiene precio de salida</label>
                {% else %}
                    {{ entity.preciosalida }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Peso</th>
            <td>
                {% if entity.peso == '' %}
                    <label style="color: red">El producto no tiene peso</label>
                {% else %}
                    {{ entity.peso }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Volumen</th>
            <td>
                {% if entity.volumen == '' %}
                    <label style="color: red">El producto no tiene volumen</label>
                {% else %}
                    {{ entity.volumen }}
                {% endif %}
            </td>
        </tr>

        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('producto_edit', { 'id': entity.id }) }}"> Editar</a>
    </div>

    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('producto') }}"> Listado</a>
    </div>


{% endblock %}


{% block contenido %}


{% endblock %}
