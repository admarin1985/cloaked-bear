<table class="table table-striped" style="font-size: 16px;">
    <tbody>

    <tr>
        <th>Nombre</th>
        <td>{{ entity.nombre }}</td>
    </tr>
    <tr>
        <th>Proveedor</th>
        <td>{{ entity.proveedor }}</td>
    </tr>
    <tr>
        <th>Código</th>
        <td>{{ entity.codigo }}</td>
    </tr>
    <tr>
        <th>Unidad de medida (U/M)</th>
        <td>{{ entity.uom }}</td>
    </tr>
    <tr>
        <th>Categoría de Producto</th>
        <td>{{ entity.categoriaProducto }}</td>
    </tr>
    <tr>
        <th>Grupo</th>
        <td>{{ entity.grupo }}</td>
    </tr>
    <tr>
        <th>Subgrupo</th>
        <td>{{ entity.subgrupo }}</td>
    </tr>
    <tr>
        <th>Condición</th>
        <td>{{ entity.condicion }}</td>
    </tr>

    <tr>
        <th>Tiene Numero Serie</th>
        <td>
            {% if entity.tieneNroSerie == 1 %}
                Sí
            {% else %}
                No
            {% endif %}
        </td>
    </tr>

    <tr>
        <th>Tiene Ref. Interna</th>
        <td>
            {% if entity.tieneRefInterna == 1 %}
                Sí
            {% else %}
                No
            {% endif %}
        </td>
    </tr>

    <tr>
        <th>Costos existentes</th>
        <td>
            <table class="table table-striped" style="font-size: 16px;">
                <th>Costo</th>
                <th>Proveedor</th>
                <th>Código Alternativo</th>
                <th>Activo</th>

                {% for costo in entity.costoproducto %}
                <tbody>
                <tr>
                    <td>{{ costo.costo }}</td>
                    <td>{{ costo.proveedor }}</td>
                    <td>{{ costo.codigoAlternativo }}</td>
                    <td>{{ costo.activo ? '<span class="glyphicon glyphicon-ok" title="Activo"></span>' : '<span class="glyphicon glyphicon-remove" title="Inactivo"></span>' }}</td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            <span class="label label-danger">No existen líneas de costos de productos disponibles</span>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </td>
    </tr>

    <tr>
        <th>Activo</th>
        <td>{{ entity.activo ? '<span class="glyphicon glyphicon-ok" title="Activo"></span>' : '<span class="glyphicon glyphicon-remove" title="Inactivo"></span>' }}</td>
    </tr>

    </tbody>
</table>