{% block collection_widget %}
    {% spaceless %}
<div class="collection">
    {% if prototype is defined %}
        {% set attr = attr | merge({'data-prototype': block('collection_item_widget') }) %}
    {% endif %}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div  {{ block('widget_container_attributes') }}>
                        <h4>Listado de precios insertados:</h4>

                        <table  class="records_list table table-striped table-bordered table-condensed table-hover" style="font-size: 13px;">
                            <thead>
                                <tr>
                                    <th>Costo</th>
                                    <th>Precio</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Fin</th>
                                    <th>Activo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody id="tbody">
                                    {% set counter = form | length %}
                                    {% for rows in form %}
                                        <tr class="form-group">
                                            {{ _self.template(rows) }}
                                        </tr>
                                    {% endfor %}
                            </tbody>


                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{ form_rest(form) }}
    <div>

    </div>
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
    {% spaceless %}
        {{ _self.template(prototype) }}
    {% endspaceless %}
{% endblock collection_item_widget %}

{% macro template(prototype) %}
    <td>
        {{ form_errors(prototype.costo) }}
        {{ form_widget(prototype.costo) }}
    </td>

    <td>
        {{ form_errors(prototype.precio) }}
        {{ form_widget(prototype.precio) }}
    </td>

    <td>
        {{ form_errors(prototype.fechaInicio) }}
        {{ form_widget(prototype.fechaInicio) }}
    </td>

    <td>
        {{ form_errors(prototype.fechaFin) }}
        {{ form_widget(prototype.fechaFin) }}
    </td>

    <td>
        {{ form_errors(prototype.activo) }}
        {{ form_widget(prototype.activo) }}
    </td>

    <td>
        <a class="btn btn-primary delete_tag_link" href="#"><i class="fa fa-minus-circle"></i></a>
    </td>



{% endmacro %}