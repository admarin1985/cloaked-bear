{% block collection_widget %}
    {% spaceless %}
<div class="collection">
    {% if prototype is defined %}
        {% set attr = attr | merge({'data-prototype': block('collection_item_widget') }) %}
    {% endif %}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div  {{ block('widget_container_attributes') }}>
                        <h4>Listado de líneas insertadas:</h4>

                        <table  class="records_list table table-striped table-bordered table-condensed table-hover" style="font-size: 13px;">
                            <thead>
                                <tr>
                                    <th>Línea</th>
                                    <th>Producto</th>
                                    <th>Cant.Pedido</th>
                                    <th>UOM</th>
                                    <th>Precio</th>
                                    <th>Impuesto</th>
                                    <th>Moneda</th>
                                    <th>%Descuento</th>
                                    <th>Importe</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody id="tbody">
                                    {% set counter = form | length %}
                                    {% for rows in form %}
                                        <tr class="form-group">
                                            {{ _self.template(rows) }}
                                        </tr>
                                    {% endfor %}
                            </tbody>


                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{ form_rest(form) }}
    <div>

    </div>
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
    {% spaceless %}
        {{ _self.template(prototype) }}
    {% endspaceless %}
{% endblock collection_item_widget %}

{% macro template(prototype) %}
    <td>
        {{ form_errors(prototype.linea) }}
        {{ form_widget(prototype.linea) }}
    </td>

    <td>
        {{ form_errors(prototype.producto) }}
        {{ form_widget(prototype.producto) }}
    </td>

    <td>
        {{ form_errors(prototype.cantidad_pedido) }}
        {{ form_widget(prototype.cantidad_pedido) }}
    </td>

    <td>
        {{ form_errors(prototype.uom) }}
        {{ form_widget(prototype.uom) }}
    </td>

    <td>
        {{ form_errors(prototype.precio_unitario) }}
        {{ form_widget(prototype.precio_unitario) }}
    </td>

    <td>
        {{ form_errors(prototype.impuesto) }}
        {{ form_widget(prototype.impuesto) }}
    </td>

    <td>
        {{ form_errors(prototype.moneda) }}
        {{ form_widget(prototype.moneda) }}
    </td>

    <td>
        {{ form_errors(prototype.porciento_descuento) }}
        {{ form_widget(prototype.porciento_descuento) }}
    </td>

    <td>
        {{ form_errors(prototype.importe_linea) }}
        {{ form_widget(prototype.importe_linea) }}
    </td>

    <td>
        <a class="btn btn-primary delete_tag_link" href="#"><i class="fa fa-minus-circle"></i></a>
    </td>



{% endmacro %}