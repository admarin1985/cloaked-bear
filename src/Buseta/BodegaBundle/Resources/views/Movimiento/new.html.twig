{% extends "BusetaBodegaBundle::layout.html.twig" %}

{#{% form_theme form 'BusetaTemplateBundle:Widgets:collection_movimientos_insertados.html.twig' %}#}

{% block nombre_menu_superior %}

{% endblock %}

{% block title %}
    Realizar Movimiento entre Bodegas
{% endblock %}

{% block titulo_encabezado %}
    Realizar Movimiento entre Bodegas
{% endblock %}

{% block area_trabajo %}

  {{ form_start(form) }}

    {% if form_errors(form) %}
        <div id="error" class="alert alert-danger" >
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            <strong>!ERROR!</strong> {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row show-grid">
        <div class="col-lg-4">
            <label>Bodega Origen:</label>
            {{ form_widget(form.almacenOrigen) }}
        </div>

        <div class="col-lg-4">
            <label>Bodega Destino:</label>
            {{ form_widget(form.almacenDestino) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{ form_row(form.movimientos_productos) }}
        </div>
    </div>


    <div class="row show-grid">
        <div class="col-md-4">
            <div class="btn-group" style="padding-bottom: 8px;">
                <a id="adicionarMovimiento" data-toggle="modal" data-target="#newMovimiento" class="btn btn-primary" href="#"><i class="fa fa-plus-circle"></i> Adicionar movimiento</a>
            </div>
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-lg-4">

            <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">
            <div class="btn-group">
                <a class="btn btn-primary" href="{{ path('movimiento') }}"> Cancelar</a>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

    <!-- Modal -->
    <div class="modal" id="newMovimiento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 850px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title" id="myModalLabel">Filtrar Producto</h3>
                </div>
                <div class="modal-body">
                    <form id="filter_producto" action="{{ path('producto_filter') }}" method="get" {{ form_enctype(movimientosProductos) }}>
                        <div class="row show-grid">
                            <div class="col-md-4">
                                {{ form_row(movimientosProductos.nombre) }}
                            </div>

                            <div class="col-md-4">
                                {{ form_row(movimientosProductos.codigo) }}
                            </div>

                            <div class="col-md-4">
                                {{ form_row(movimientosProductos.categoriaProducto) }}
                            </div>
                        </div>

                        <div class="row show-grid">
                            <div class="col-md-4">
                                {{ form_row(movimientosProductos.grupo) }}
                            </div>

                            <div class="col-md-4">
                                {{ form_row(movimientosProductos.subgrupo) }}
                            </div>
                        </div>

                    {{ form_rest(movimientosProductos) }}
                    </form>

                    <div id="records_list" style="padding-left: 18px">
                        <div class="paginator row">
                            <div class="col-lg-4"><strong>Resultados:</strong> {{ productos.getTotalItemCount }}</div>
                        </div>

                        <table class="records_list table table-striped table-bordered table-condensed table-hover">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Codigo</th>
                                <th>Categoria Producto</th>
                                <th>Grupo</th>
                                <th>Subgrupo</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in productos %}
                                <tr>
                                    <td>{{ entity.nombre }}</td>
                                    <td>{{ entity.codigo }}</td>
                                    <td>{{ entity.categoriaProducto }}</td>
                                    <td>{{ entity.grupos }}</td>
                                    <td>{{ entity.subgrupos }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="12">No se encontraron registros de productos en el sistema.</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                        <div class="paginator row">
                            <div class="col-lg-12"></div>
                            <div class="col-lg-12" style="text-align: center">{{ knp_pagination_render(productos) }}</div>
                        </div>
                    </div>
                </div>


            </div>

            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

        var collectionHolder = $('div#buseta_bodegabundle_movimiento_movimientos_productos');
        var $addTagLink = $('a.add_tag_link');

        jQuery(document).ready(function() {

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            collectionHolder.data('index', collectionHolder.find('a.delete_tag_link').length);

            updateDeleteLink();
            updateView();

            function addTagForm(collectionHolder) {
                // Get the data-prototype explained earlier
                var prototype = collectionHolder.data('prototype');

                // get the new index
                var index = collectionHolder.data('index');

                // Replace '__name__' in the prototype's HTML to
                // instead be a number based on how many items we have
                var newForm = prototype.replace(/__name__/g, index);

                // increase the index with one for the next item
                collectionHolder.data('index', index + 1);

                // Display the form in the page in an li, before the "Add a tag" link li
                var $newFormDiv = $('<div></div>').append(newForm);
                collectionHolder.find('#tbody').append($newFormDiv);
                updateDeleteLink();
                updateView();
            }

            function updateDeleteLink(){
                $('a.delete_tag_link').on('click', function(e) {
                    // prevent the link from creating a "#" on the URL
                    e.preventDefault();

                    // remove the li for the tag form
                    $(this).parent().parent().remove();

                    updateView();
                });
            }

            function updateView(){
                counter = collectionHolder.find('a.delete_tag_link').length;
                if(counter == 0){
                    $('div#no-elements-tr').show();
                }else{
                    $('div#no-elements-tr').hide();
                }
            }

            //Busqueda Dinamica del Filtrado del Ajax
            $('#buseta_bodegabundle_movimientosProductos_nombre').on('keypress', function(){
                var filterForm = $('form#filter_producto'),
                        url = $(filterForm).attr('action');

                filterForm.ajaxSubmit({
                    success: function (response, textStatus, jqXHR) {
                        console.log(response);
                    },
                    url: url,
                    dataType: 'json'
                });
            });

            $('#adicionarMovimiento').on('click', function () {
                //Resetear valores del modal "newMovimiento"
                var modal = $('#newMovimiento');
                var movimiento_producto = modal.find('#buseta_bodegabundle_movimientosProductos_producto');
                var movimiento_cantidad = modal.find('#buseta_bodegabundle_movimientosProductos_cantidad');

                movimiento_producto.val('');
                movimiento_cantidad.val('');
            });

            $addTagLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                var modal = $('#newMovimiento');

                // captura de valores del modal
                var movimiento_producto = modal.find('#buseta_bodegabundle_movimientosProductos_producto');
                var movimiento_cantidad = modal.find('#buseta_bodegabundle_movimientosProductos_cantidad');

                var index = collectionHolder.data('index');

                addTagForm(collectionHolder);


                $('#buseta_bodegabundle_movimiento_movimientos_productos_' + index + '_producto').val(movimiento_producto.val()).prop('readonly','readonly');
                $('#buseta_bodegabundle_movimiento_movimientos_productos_' + index + '_cantidad').val(movimiento_cantidad.val()).prop('readonly','readonly');
            });
        });

        //Actualiza los almacenes de destino a partir de los almacenes de origen seleccionados con peticiones AJAX
        $({{ form.almacenOrigen.vars.id }}).change(function(){
            var data = {
                almacenOrigen_id: $(this).val()
            };

            $.ajax({
                type: 'GET',
                url: '{{ path("movimientos_ajax_almacenOrigen_almacenDestino") }}',
                data: data,
                success: function(data) {
                    var values = $.parseJSON(data);
                    var $almacenDestino_selector = $({{ form.almacenDestino.vars.id }});

                    $almacenDestino_selector.html('<option>---Seleccione---</option>');

                    for (var i=0, total = values.length; i < total; i++) {
                        $almacenDestino_selector.append('<option value="' + values[i].id + '">' + values[i].valor + '</option>');
                    }
                }
            });
        });
    </script>
{% endblock javascripts %}
