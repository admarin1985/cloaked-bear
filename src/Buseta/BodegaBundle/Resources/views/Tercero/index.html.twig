{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo %}
    Listado de terceros
{% endblock %}

{% block titulo_encabezado %}
    Listados de terceros
{% endblock %}

{% block area_trabajo %}

    <div class="btn-group" style="padding-bottom: 8px;">
        <a class="btn btn-primary" href="{{ path('tercero_new') }}"><i class="fa fa-plus-circle"></i> Adicionar tercero</a>
    </div>

    <table class="records_list table table-striped table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th>Código</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Alias</th>
            <th>Cliente</th>
            <th>Institución</th>
            <th>Proveedor</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.alias }}</td>
                <td style="color: red;">
                    {% if entity.cliente == null %}
                        No tiene
                    {% else %}
                        Sí tiene
                    {% endif %}
                </td>
                <td style="color: red;">
                    {% if entity.institucion == null %}
                        No tiene
                    {% else %}
                        Sí tiene
                    {% endif %}
                </td>
                <td style="color: red;">
                    {% if entity.proveedor == null %}
                        No tiene
                    {% else %}
                        Sí tiene
                    {% endif %}
                </td>
                <td>
                    {% if entity.activo == 1 %}
                        Sí
                    {% else %}
                        No
                    {% endif %}
                </td>
                <td  style="width: 18% !important; text-align: center;">
                    <div class="btn-group">
                        <a class="btn btn-success btn-xs" href="{{ path('tercero_show', { 'id': entity.id }) }}"><i class="fa fa-search"> Mostrar</i></a>
                    </div>

                    {#<div class="btn-group">
                        <a class="btn btn-danger btn-xs" href="{{ path('tercero_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"> Editar</i></a>
                    </div>#}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">No se encontraron registros de terceros en el sistema.</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ knp_pagination_render(entities) }}
            </div>
        </div>
    </div>

{% endblock %}