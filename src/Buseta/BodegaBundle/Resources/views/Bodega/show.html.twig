{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Datos de la bodega: "{{ entity.nombre }}"
{% endblock %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>

            <tr>
                <th>Código</th>
                <td>
                    {% if entity.codigo == '' %}
                        <label style="color: red">La bodega no tiene código</label>
                    {% else %}
                        {{ entity.codigo }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Descripción</th>
                <td>
                    {% if entity.descripcion == '' %}
                        <label style="color: red">La bodega no tiene descripción</label>
                    {% else %}
                        {{ entity.descripcion }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Dirección</th>
                <td>
                    {% if entity.direccion == '' %}
                        <label style="color: red">La bodega no tiene dirección</label>
                    {% else %}
                        {{ entity.direccion }}
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('bodega_edit', { 'id': entity.id }) }}"> Editar</a>
    </div>

    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('bodega') }}"> Listado</a>
    </div>


{% endblock %}


{% block contenido %}


{% endblock %}
