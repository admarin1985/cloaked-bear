{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Modificar datos de la bodega: {{ entity.nombre }}
{% endblock %}

{% block area_trabajo %}

<form action="{{ path('bodega_update',{'id':entity.id}) }}" method="post" {{ form_enctype(edit_form) }}>

    <div class="row show-grid">
        <div class="col-md-6">
            <label>Nombre:</label>
            {{ form_widget(edit_form.nombre) }}
        </div>
        <div class="col-md-6">
            <label>Código:</label>
            {{ form_widget(edit_form.codigo) }}
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-md-6">
            <label>Descripción:</label>
            {{ form_widget(edit_form.descripcion) }}
        </div>
        <div class="col-md-6">
            <label>Dirección:</label>
            {{ form_widget(edit_form.direccion) }}
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-md-4">

            <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">
            <div class="btn-group">
                <a class="btn btn-primary" href="{{ path('bodega') }}"> Cancelar</a>
            </div>
        </div>
    </div>

    {{ form_rest(edit_form) }}
</form>

{% endblock %}


{% block contenido %}

{% endblock %}
