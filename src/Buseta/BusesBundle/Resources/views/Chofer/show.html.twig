{% extends "BusetaBusesBundle::layout.html.twig" %}

{% block nombre_menu_superior %}
    Datos del Chofer
{% endblock %}

{% block titulo_encabezado %}
    Datos del Chofer: "{{ entity.nombres }} {{ entity.apellidos }}"
{% endblock %}

{% block area_trabajo %}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Nombres</th>
            <td>{{ entity.nombres }}</td>
        </tr>

        <tr>
            <th>Apellidos</th>
            <td>{{ entity.apellidos }}</td>
        </tr>

        <tr>
            <th>Cédula</th>
            <td>{{ entity.cedula }}</td>
        </tr>

        <tr>
            <th>Género</th>
            <td>{{ entity.genero }}</td>
        </tr>

        <tr>
            <th>Estado Civil</th>
            <td>{{ entity.estadoCivil }}</td>
        </tr>

        <tr>
            <th>Nacionalidad</th>
            <td>{{ entity.nacionalidad }}</td>
        </tr>

        <tr>
            <th>Dirección</th>
            <td>{{ entity.direccion }}</td>
        </tr>

        <tr>
            <th>Teléfono</th>
            <td>{{ entity.telefono }}</td>
        </tr>

        <tr>
            <th>Fecha de Nacimiento</th>
            <td>{{ entity.fechaNacimiento | date('d/m/Y') }}</td>
        </tr>

        <tr>
            <th>Identificador</th>
            <td>{{ entity.identificador }}</td>
        </tr>

        <tr>
            <th>Pin</th>
            <td>{{ entity.pin }}</td>
        </tr>

        <tr>
            <th>Código de Barras</th>
            <td>{{ entity.codigoBarras }}</td>
        </tr>

        </tbody>
    </table>

        <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('chofer_edit', { 'id': entity.id }) }}"> Editar</a>
        <a class="btn btn-primary" href="{{ path('chofer') }}"> Listado</a>
        <a href="#delete" data-href="{{ path('chofer_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaBusesBundle') }}</a>
    </div>

    {% include 'BusetaBusesBundle:Chofer:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var deleteevent = new DeleteEvent('{{ path('chofer') }}', 'div#chofer_records_list', false);
        deleteevent.start_events();
    </script>
{% endblock %}
