{% extends "BusetaBusesBundle::layout.html.twig" %}

{% block nombre_menu_superior %}
    Datos del Módulo de Combustible
{% endblock %}

{% block titulo_encabezado %}
    Datos del Módulo de Combustible: "{{ entity.combustible }}"
{% endblock %}

{% block area_trabajo %}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Nomenclador de Combustible</th>
            <td>{{ entity.combustible }}</td>
        </tr>

        <tr>
            <th>Chofer</th>
            <td>{{ entity.chofer }}</td>
        </tr>

        <tr>
            <th>Autobús</th>
            <td>{{ entity.autobus }}</td>
        </tr>

        <tr>
            <th>Cantidad de Libros</th>
            <td>{{ entity.cantidadLibros }}</td>
        </tr>

        </tbody>
    </table>

        <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('moduloCombustible_edit', { 'id': entity.id }) }}"> Editar</a>
        <a class="btn btn-primary" href="{{ path('moduloCombustible') }}"> Listado</a>
        <a href="#delete" data-href="{{ path('moduloCombustible_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaBusesBundle') }}</a>
    </div>

    {% include 'BusetaBusesBundle:ModuloCombustible:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var deleteevent = new DeleteEvent('{{ path('moduloCombustible') }}', 'div#moduloCombustible_records_list', false);
        deleteevent.start_events();
    </script>
{% endblock %}
