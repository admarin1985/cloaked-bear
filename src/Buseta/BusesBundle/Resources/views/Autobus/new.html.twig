{% block area_trabajo %}

        <form action="{{ path('autobus_create') }}" method="post" {{ form_enctype(form) }}>
            <div class="row show-grid">
                <div class="col-md-6">
                    <label>Vista Frontal:</label>
                    {{ form_widget(form.imagen_frontal) }}
