                <div class="col-md-6">
                    <label>Vista Lateral Derecha:</label>
                    {{ form_widget(form.imagen_lateral_d) }}
                </div>
            </div>

            <div class="row show-grid">
                <div class="col-md-4">
                    <label>Matrícula:</label>
                    {{ form_widget(form.matricula) }}
                </div>

                <div class="col-md-4">
