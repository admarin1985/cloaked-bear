                <td>
                    {% if entity.marcacajacambio == '' %}
                        <label style="color: red">El autobus no tiene Marca Caja de Cambios</label>
                    {% else %}
                        {{ entity.marcacajacambio }}
                    {% endif %}
                </td>
            </tr>
            <tr>
