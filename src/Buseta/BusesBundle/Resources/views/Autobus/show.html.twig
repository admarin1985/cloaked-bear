{% extends "CoreBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Datos del Autobus de Matrícula: "{{ entity.matricula }}"
{% endblock %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
            <tr>
                <th>Imagen Frontal</th>
                <td>
                    {% set path = 'images/' ~ entity.imagenfrontal %}
                    <img src="{{ asset(path)}}" alt="Imagen frontal" class="imagen-autobus" />
                </td>
            </tr>
            <tr>
                <th>Imagen Lateral Derecha</th>
                <td>
                    {% set path = 'images/' ~ entity.imagenlaterald %}
                    <img src="{{ asset(path)}}" alt="Imagen lateral derecha" class="imagen-autobus" />
                </td>
            </tr>
            <tr>
                <th>Imagen Lateral Izquierda</th>
                <td>
                    {% set path = 'images/' ~ entity.imagenlaterali %}
                    <img src="{{ asset(path)}}" alt="Imagen lateral izquierda" class="imagen-autobus" />
                </td>
            </tr>
            <tr>
                <th>Imagen Trasera</th>
                <td>
                    {% set path = 'images/' ~ entity.imagentrasera %}
                    <img src="{{ asset(path)}}" alt="Imagen trasera" class="imagen-autobus" />
                </td>
            </tr>
            <tr>
                <th>Matrícula</th>
                <td>{{ entity.matricula }}</td>
            </tr>
            <tr>
                <th>Número Chasis</th>
                <td>{{ entity.numerochasis }}</td>
            </tr>
            <tr>
                <th>Número Motor</th>
                <td>{{ entity.numeromotor }}</td>
            </tr>
            <tr>
                <th>Peso Tara</th>
                <td>{{ entity.pesotara }}</td>
            </tr>
            <tr>
                <th>Peso Bruto</th>
                <td>{{ entity.pesobruto }}</td>
            </tr>
            <tr>
                <th>Número Plazas</th>
                <td>{{ entity.numeroplazas }}</td>
            </tr>
            <tr>
                <th>Número Cilindros</th>
                <td>{{ entity.numerocilindros }}</td>
            </tr>
            <tr>
                <th>Cilindrada</th>
                <td>{{ entity.cilindrada }}</td>
            </tr>
            <tr>
                <th>Potencia</th>
                <td>{{ entity.potencia }}</td>
            </tr>
            <tr>
                <th>Fecha Ingreso</th>
                <td>{{ entity.fechaingreso|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Válido Hasta</th>
                <td>{{ entity.validohasta|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Fecha RTV 1</th>
                <td>{{ entity.fechartv1 }}</td>
            </tr>
            <tr>
                <th>Fecha RTV 2</th>
                <td>{{ entity.fechartv2 }}</td>
            </tr>
            <tr>
                <th>Rampas</th>
                <td>
                    {% if entity.rampas == '' %}
                        <label style="color: red">El autobus no tiene Rampas</label>
                    {% else %}
                        {{ entity.rampas }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Barras</th>
                <td>
                    {% if entity.barras == '' %}
                        <label style="color: red">El autobus no tiene Barras</label>
                    {% else %}
                        {{ entity.barras }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Cámaras</th>
                <td>
                    {% if entity.camaras == '' %}
                        <label style="color: red">El autobus no tiene Cámaras</label>
                    {% else %}
                        {{ entity.camaras }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Lector de Células</th>
                <td>
                    {% if entity.lectorcedulas == '' %}
