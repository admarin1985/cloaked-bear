{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('a#filter_form_header').click(function () {
                if ($('a#filter_form_header span').hasClass('glyphicon-chevron-right')) {
                    $('a#filter_form_header span')
                            .removeClass('glyphicon-chevron-right')
                            .addClass('glyphicon-chevron-down');
                } else {
                    $('a#filter_form_header span')
                            .removeClass('glyphicon-chevron-down')
                            .addClass('glyphicon-chevron-right');
                }

                $('div#filter_form_component').slideToggle(500);
            });

            $('a#filter_form_submit_btn').click(function () {
                $('form#filter_form').submit();
            });

            $('a#filter_form_reset_btn').click(function () {
                $('form#filter_form').find('input').each(function () {
                    $(this).val(null);
                });
                $('form#filter_form').find('select').each(function () {
                    $(this).val(null);
                })
            });
        });
    </script>

    <script type="text/javascript">
        var autobuses = {
            activeblock: false,
            _start_events: function (){
                // Paginator sort
                $('table.autobuses_records_list').find('a.sortable, a.asc, a.desc').on('click', autobuses._load);
                // Paginator navigation
                $('div.autobuses-paginator.row ul.pagination').find('a.paginator-link').on('click', autobuses._load);
            },
            _load: function(event) {
                if(event !== undefined) {
                    event.preventDefault();
                }

                autobuses.toggle();

                url = $(this).attr('href');

                $.get(url).done(function (response, textStatus, jqXHR) {
                    autobuses.toggle();
                    $('div#autobuses_results_container').replaceWith($(response).find('div#autobuses_results_container'));

                    autobuses._start_events();
                }).fail(utils._fail).always(function(){
                    //on complete function
                });
            },
            toggle: function() {
                if(autobuses.activeblock) {
                    $('div#autobuses_results_container').unblock();
                    autobuses.activeblock = false;
                } else {
                    $('div#autobuses_results_container').block();
                    autobuses.activeblock = true;
                }
            }
        };

        var utils = {
            _fail: function (jqXHR, textStatus, errorThrown) {
                if(jqXHR.status == 500 && jqXHR.responseText.message != undefined) {
                    addGlobalMessage('danger', jqXHR.responseText.message);
                } else {
                    addGlobalMessage('danger', '{{ 'messages.unexpected_error' | trans({}, 'BusetaBusesBundle') }}');
                }
            }
        };
    </script>

{% endblock javascripts %}